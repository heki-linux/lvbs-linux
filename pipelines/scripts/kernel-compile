#!/usr/bin/env bash

set -x
set -e

FLAVOR=$1

SOURCE_ROOT=$(cd "$(dirname "$0")/../.." && pwd)
cd "${SOURCE_ROOT}"

ARCH=$(uname -p)
if [ "$ARCH" == "aarch64" ];
then
    ARCH="arm64"
fi

make mrproper

CONFIG=mshv_defconfig
case "${FLAVOR}" in
	mariner)
		curl -o .config https://raw.githubusercontent.com/microsoft/CBL-Mariner/main/SPECS-EXTENDED/kernel-mshv/config
		CONFIG=olddefconfig
		;;
	dom0-built-in)
		# pass
		;;
esac

make LC_ALL= ARCH="${ARCH}" ${CONFIG}

case "${FLAVOR}" in
	dom0-vtl)
		sed -i 's/^# CONFIG_HYPERV_VTL is not set/CONFIG_HYPERV_VTL=y/' .config
        ;;
	dom0-module)
		sed -i 's/HYPERV_VMM_API=y/HYPERV_VMM_API=m/' .config
		;;
	dom0-disabled)
		sed -i 's/HYPERV_VMM_API=.*//' .config
		;;
esac

make -j"$(nproc)" ARCH="${ARCH}" W=1
make -j"$(nproc)" ARCH="${ARCH}" W=1 modules

make -j"$(nproc)" ARCH="${ARCH}" -C tools/perf PYTHON=python3 all
make -j"$(nproc)" ARCH="${ARCH}" -C tools/bpf/bpftool
